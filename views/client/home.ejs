<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home | Client</title>
    <link rel="shortcut icon" href="/image/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="/datatable/datatable.css">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/all.css">
    <link rel="stylesheet" href="/css/client.css">
</head>

<body>

    <div class="wrapper">
        <div class="container-xxl">
            <div class="mt-4 w-100 d-flex justify-content-end align-items-center">
                <a href="/employee/logout" class="delete-anchor py-2 px-5">Logout</a>
            </div>
            <ul class="mt-4 list-group list-group-horizontal w-100 rounded-0">
                <li class="list-group-item w-50 rounded-0 py-3 fw-semibold">Name</li>
                <li class="list-group-item w-50 rounded-0 py-3 fw-semibold"><%=client.name%></li>
            </ul>
            <ul class="list-group list-group-horizontal w-100">
                <li class="list-group-item w-50 rounded-0 py-3 fw-semibold">Contact Person</li>
                <li class="list-group-item w-50 rounded-0 py-3 fw-semibold"><%=client.contactPerson%></li>
            </ul>
            <ul class="list-group list-group-horizontal w-100">
                <li class="list-group-item w-50 rounded-0 py-3 fw-semibold">Contact Number</li>
                <li class="list-group-item w-50 rounded-0 py-3 fw-semibold"><%=client.contactNumber%></li>
            </ul>
            <ul class="list-group list-group-horizontal w-100">
                <li class="list-group-item w-50 rounded-0 py-3 fw-semibold">Username</li>
                <li class="list-group-item w-50 rounded-0 py-3 fw-semibold"><%=client.username%></li>
            </ul>
            <ul class="list-group list-group-horizontal w-100">
                <li class="list-group-item w-50 rounded-0 py-3 fw-semibold">Credit</li>
                <li class="list-group-item w-50 rounded-0 py-3 fw-semibold">₹ <%=client.credit%></li>
            </ul>
            <ul class="list-group list-group-horizontal w-100">
                <li class="list-group-item w-50 rounded-0 py-3 fw-semibold">Pending Balance</li>
                <li class="list-group-item w-50 rounded-0 py-3 fw-semibold">₹ <%=client.pendingBalance%></li>
            </ul>

            <div class="mt-4 w-100 d-flex align-items-center justify-content-center gap-3">
                <button type="button" class="modal-open-button" data-bs-toggle="modal" data-bs-target="#addWorkModal">Add New Work</button>
                <a class="modal-open-button">View Invoices</a>
            </div>

            <div class="mt-4 w-100 overflow-x-scroll">
                <table id="workTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>SL.No</th>
                            <th>Subject</th>
                            <th>Urgency</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>View</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% work.forEach((i, index)=>{ %>
                        <tr>
                            <td><%=index+1%></td>
                            <td><%=i.subject%></td>
                            <td><%=i.urgency%></td>
                            <td><%=i.date%></td>
                            <td><%=i.status%></td>
                            <td><a href="/<%=i.id%>/viewwork" class="view-profile-anchor">View</a></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <div class="modal fade" id="addWorkModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Add New Work</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/addwork" method="post" class="w-100" enctype="multipart/form-data">
                        <div class="row w-100 gx-0 gy-3 m-0 p-0">
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" placeholder="Subject" name="subject" required>
                                    <label>Subject</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Describe the work" name="description" style="height: 150px" required></textarea>
                                    <label>Describe the work</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <select class="form-select" name="urgency" required>
                                        <option value="" selected>select your urgency</option>
                                        <option value="high">High</option>
                                        <option value="moderate">Moderate</option>
                                        <option value="low">Low</option>
                                    </select>
                                    <label>Urgency</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" placeholder="Attachment" name="attachment">
                                    <label>Attachment ( links if any )</label>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4 w-100 d-flex align-items-center justify-content-end gap-3">
                            <button type="button" class="modal-close-button" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="modal-save-button">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <script src="/js/script.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <script src="/js/jquery.js"></script>
    <script src="/datatable/datatable.js"></script>
    <script src="/datatable/datatable.bootstrap.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            new DataTable('#workTable');
        })
    </script>
</body>

</html>