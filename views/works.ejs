<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Works | Admin</title>
    <link rel="shortcut icon" href="/image/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/datatable/datatable.css">
    <link rel="stylesheet" href="/css/all.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>

<body>

    <div class="wrapper">
        <div class="content">
            <div class="container-xxl">
                <div class="header-container">
                    <p class="header">Work</p>
                </div>
                <div class="table-responsive my-5">
                    <table id="worksTable" class="table table-striped">
                        <thead>
                            <tr>
                                <th>SL.No</th>
                                <th>Client</th>
                                <th>Subject</th>
                                <th>Urgency</th>
                                <th>Date</th>
                                <th>Assigned To</th>
                                <th>Status</th>
                                <th>View</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% work.forEach((i, index)=>{ %>
                            <tr>
                                <td><%=index+1%></td>
                                <td><%=i.client.name%></td>
                                <td><%=i.subject%></td>
                                <td><%=i.urgency%></td>
                                <td><%=i.date%></td>
                                <td><%=i.assignedEmployee.name || "not assigned"%></td>
                                <td><%=i.status%></td>
                                <td>
                                    <a href="/admin/works/<%=i.id%>/view" class="view-profile-anchor">View</a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/adminNavbar.js"></script>
    <script src="/js/script.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <script src="/js/jquery.js"></script>
    <script src="/datatable/datatable.js"></script>
    <script>
        let navActive = document.querySelectorAll('.admin-works')
        document.addEventListener("DOMContentLoaded", () => {
            new DataTable('#worksTable');
        })
        navActive.forEach((i) => {
            i.classList.add('active')
        })
    </script>
</body>

</html>