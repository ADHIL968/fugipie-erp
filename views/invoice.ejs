<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice | Admin</title>
    <link rel="shortcut icon" href="/image/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/datatable/datatable.css">
    <link rel="stylesheet" href="/css/all.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>

<body>

    <div class="wrapper">
        <div class="content">
            <div class="container-xxl">
                <div class="header-container">
                    <p class="header">Invoice</p>
                </div>
                <div class="w-100 mt-4 d-flex justify-content-center align-items-center">
                    <a href="/admin/invoice/add" class="modal-open-button">Add Invoice</a>
                </div>
                <div class="mt-4 w-100 overflow-x-scroll">
                    <table id="invoiceTable" class="table table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Client</th>
                                <th>Amount</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Cancel</th>
                                <th>View</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% invoice.forEach((i)=>{ %>
                            <tr>
                                <td><%=i.id%></td>
                                <td><%=i.client.name%></td>
                                <td><%=i.amount%></td>
                                <td><%=i.date%></td>

                                <% if(!i.ispaid && !i.iscanceled){ %>
                                <td><button type="button" class="modal-open-button" data-bs-toggle="modal" data-bs-target="#markPaidModal" onclick="selectId('<%=i.id%>')">Mark as Paid</button></td>
                                <% }else if(i.iscanceled){ %>
                                <td>canceled, <%=i.cancelReason%></td>
                                <% }else{ %>
                                <td>paid on <%=i.paidon%></td>
                                <% } %>

                                <% if(!i.iscanceled && !i.ispaid){ %>
                                <td><button type="button" class="delete-anchor" data-bs-toggle="modal" data-bs-target="#deleteInvoiceModal" onclick="selectId('<%=i.id%>')">Delete</button></td>
                                <% }else if(i.iscanceled){ %>
                                    <td>canceled</td>
                                <% }else{ %>
                                    <td>paid</td>
                                <% } %>

                                <td><a href="/admin/invoice/<%=i.id%>/view" class="view-profile-anchor">view</a></td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="markPaidModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Mark As Paid</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/admin/invoice/payment" method="post" class="w-100">
                        <div class="row w-100 gx-0 gy-3 m-0 p-0">
                            <div class="col-12">
                                <input type="hidden" name="invoiceid">
                                <div class="form-floating">
                                    <input type="date" class="form-control" name="date" placeholder="Date" required>
                                    <label>Date of Payment</label>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4 w-100 d-flex align-items-center justify-content-end gap-3">
                            <button type="button" class="modal-close-button" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="modal-save-button">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteInvoiceModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Delete Invoice</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/admin/invoice/delete" method="post" class="w-100">
                        <div class="row w-100 gx-0 gy-3 m-0 p-0">
                            <div class="col-12">
                                <input type="hidden" name="invoiceid">
                                <div class="form-floating">
                                    <input type="text" class="form-control" name="cancelReason" placeholder="Cancel Reason" required>
                                    <label>Cancel Reason</label>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4 w-100 d-flex align-items-center justify-content-end gap-3">
                            <button type="button" class="modal-close-button" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="modal-save-button">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/adminNavbar.js"></script>
    <script src="/js/script.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <script src="/js/jquery.js"></script>
    <script src="/datatable/datatable.js"></script>
    <script src="/datatable/datatable.bootstrap.js"></script>
    <script>
        let navActive = document.querySelectorAll('.admin-invoice')
        document.addEventListener("DOMContentLoaded", () => {
            new DataTable('#invoiceTable');
        })
        navActive.forEach((i) => {
            i.classList.add('active')
        })

        function selectId(id) {
            document.querySelectorAll('[name="invoiceid"]').forEach((i) => {
                i.value = id
            })
            return
        }
    </script>
</body>

</html>