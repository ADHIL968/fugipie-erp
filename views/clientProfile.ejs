<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Profile | Admin</title>
    <link rel="shortcut icon" href="/image/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/datatable/datatable.css">
    <link rel="stylesheet" href="/css/all.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>

<body>

    <div class="wrapper">
        <div class="content">
            <div class="container-xxl">
                <div class="header-container">
                    <p class="header">View Profile</p>
                </div>
                <ul class="mt-4 list-group list-group-horizontal w-100 rounded-0">
                    <li class="list-group-item w-50 rounded-0 py-3 fw-semibold">Client</li>
                    <li class="list-group-item w-50 rounded-0 py-3 fw-semibold"><%=client.name%></li>
                </ul>
                <ul class="list-group list-group-horizontal w-100">
                    <li class="list-group-item w-50 rounded-0 py-3 fw-semibold">Contact Person</li>
                    <li class="list-group-item w-50 rounded-0 py-3 fw-semibold"><%=client.contactPerson%></li>
                </ul>
                <ul class="list-group list-group-horizontal w-100">
                    <li class="list-group-item w-50 rounded-0 py-3 fw-semibold">Contact Number</li>
                    <li class="list-group-item w-50 rounded-0 py-3 fw-semibold"><%=client.contactNumber%></li>
                </ul>
                <ul class="list-group list-group-horizontal w-100">
                    <li class="list-group-item w-50 rounded-0 py-3 fw-semibold">Username</li>
                    <li class="list-group-item w-50 rounded-0 py-3 fw-semibold"><%=client.username%></li>
                </ul>
                <ul class="list-group list-group-horizontal w-100">
                    <li class="list-group-item w-50 rounded-0 py-3 fw-semibold">Hourly Rate</li>
                    <li class="list-group-item w-50 rounded-0 py-3 fw-semibold">₹ <%=client.hourlyRate%></li>
                </ul>
                <ul class="list-group list-group-horizontal w-100">
                    <li class="list-group-item w-50 rounded-0 py-3 fw-semibold">Credit</li>
                    <li class="list-group-item w-50 rounded-0 py-3 fw-semibold">₹ <%=client.credit%></li>
                </ul>
                <ul class="list-group list-group-horizontal w-100">
                    <li class="list-group-item w-50 rounded-0 py-3 fw-semibold">Pending Balance</li>
                    <li class="list-group-item w-50 rounded-0 py-3 fw-semibold">₹ <%=client.pendingBalance%></li>
                </ul>
                <div class="mt-4 w-100 d-flex align-items-center justify-content-center gap-3">
                    <button type="button" class="modal-open-button" data-bs-toggle="modal" data-bs-target="#editClientModal">Edit Profile</button>
                    <button type="button" class="modal-open-button" data-bs-toggle="modal" data-bs-target="#addWorkModal">Add New Work</button>
                </div>
                <div class="table-responsive my-5">
                    <table id="clientTable" class="table table-striped">
                        <thead>
                            <tr>
                                <th>SL.No</th>
                                <th>Work Id</th>
                                <th>Subject</th>
                                <th>Urgency</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>View Profile</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% work.forEach((i, index)=>{ %>
                            <tr>
                                <td><%=index+1%></td>
                                <td><%=i.id%></td>
                                <td><%=i.subject%></td>
                                <td><%=i.urgency%></td>
                                <td><%=i.date%></td>
                                <td><%=i.status%></td>
                                <td><a href="/admin/works/<%=i.id%>/view" class="view-profile-anchor">View</a></td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editClientModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Edit Profile</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/admin/clients/<%=client.id%>/edit" method="post" class="w-100">
                        <div class="row w-100 gx-0 gy-3 m-0 p-0">
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" name="name" placeholder="Name" required readonly value="<%=client.name%>">
                                    <label>Name</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" name="contactPerson" placeholder="Contact Person" required value="<%=client.contactPerson%>">
                                    <label>Contact Person</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" name="contactNumber" placeholder="Contact Number" required value="<%=client.contactNumber%>">
                                    <label>Contact Number</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" name="username" placeholder="Username" required value="<%=client.username%>">
                                    <label>Username</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="password" class="form-control" name="password" placeholder="Username">
                                    <label>Password</label>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4 w-100 d-flex align-items-center justify-content-end gap-3">
                            <button type="button" class="modal-close-button" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="modal-save-button">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addWorkModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Add New Work</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/admin/clients/<%=client.id%>/addwork" method="post" class="w-100" enctype="multipart/form-data">
                        <div class="row w-100 gx-0 gy-3 m-0 p-0">
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" placeholder="Subject" name="subject" required>
                                    <label>Subject</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Describe the work" name="description" style="height: 150px" required></textarea>
                                    <label>Describe the work</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <select class="form-select" name="urgency" required>
                                        <option value="" selected>select your urgency</option>
                                        <option value="high">High</option>
                                        <option value="moderate">Moderate</option>
                                        <option value="low">Low</option>
                                    </select>
                                    <label>Urgency</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="date" class="form-control" placeholder="Date" name="date" required>
                                    <label>Date</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" placeholder="Attachment" name="attachment">
                                    <label>Attachment</label>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4 w-100 d-flex align-items-center justify-content-end gap-3">
                            <button type="button" class="modal-close-button" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="modal-save-button">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <script src="/js/adminNavbar.js"></script>
    <script src="/js/script.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <script src="/js/jquery.js"></script>
    <script src="/datatable/datatable.js"></script>
    <script>
        let navActive = document.querySelectorAll('.admin-clients')
        document.addEventListener("DOMContentLoaded", () => {
            new DataTable('#clientTable');
        })
        navActive.forEach((i) => {
            i.classList.add('active')
        })
    </script>
</body>

</html>