<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Invoice | Admin</title>
    <link rel="shortcut icon" href="/image/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/datatable/datatable.css">
    <link rel="stylesheet" href="/css/all.css">
    <link rel="stylesheet" href="/css/admin.css">
    <style>
        .form-item{
            display: block;
            width: 100%;
            background: #e5e5e5;
            outline: none;
            box-shadow: none;
            border: none;
            padding: 5px;
        }
    </style>
</head>

<body>

    <div class="wrapper">
        <div class="sidebar"></div>
        <div class="content">
            <div class="container-xxl">
                <div class="header-container">
                    <p class="header">Invoice</p>
                </div>
                <form action="/admin/invoice/add" method="post">
                    <div class="row">
                        <div class="col-12 table-responsive mt-5">
                            <table class="table ">
                                <tr>
                                    <th>ID</th>
                                    <th>:</th>
                                    <th><input type="text" name="id" required class="form-item"></th>
                                </tr>
                                <tr>
                                    <th>Date</th>
                                    <th>:</th>
                                    <th><input type="date" name="date" required class="py-2 form-item"></th>
                                </tr>
                                <tr>
                                    <th>Client</th>
                                    <th>:</th>
                                    <th>
                                        <select name="client" required class="py-2 form-item">
                                            <option value="">select client</option>
                                            <% client.forEach((i)=>{ %>
                                                <option value="<%=i.id%>-<%=i.name%>"><%=i.name%></option>
                                            <% }) %>
                                        </select>
                                    </th>
                                </tr>


                                <tr>
                                    <th>Amount</th>
                                    <th>:</th>
                                    <th><input type="text" name="amount" required class="form-item"></th>
                                </tr>
                                <tr>
                                    <th colspan="3"></th>
                                </tr>
                            </table>
                        </div>
                        <div class="col-12 table-responsive">
                            <table class="table">
                                <tr>
                                    <th>ITEM</th>
                                    <th>TEXT</th>
                                    <th>AMOUNT</th>
                                </tr>
                                <tr>
                                    <th>ITEM 1</th>
                                    <th><input type="text" name="t1" class="form-item"></th>
                                    <th><input type="text" name="a1" class="form-item"></th>
                                </tr>
                                <tr>
                                    <th>ITEM 2</th>
                                    <th><input type="text" name="t2" class="form-item"></th>
                                    <th><input type="text" name="a2" class="form-item"></th>
                                </tr>
                                <tr>
                                    <th>ITEM 3</th>
                                    <th><input type="text" name="t3" class="form-item"></th>
                                    <th><input type="text" name="a3" class="form-item"></th>
                                </tr>
                                <tr>
                                    <th>ITEM 4</th>
                                    <th><input type="text" name="t4" class="form-item"></th>
                                    <th><input type="text" name="a4" class="form-item"></th>
                                </tr>
                                <tr>
                                    <th>ITEM 5</th>
                                    <th><input type="text" name="t5" class="form-item"></th>
                                    <th><input type="text" name="a5" class="form-item"></th>
                                </tr>
                                <tr>
                                    <th>ITEM 6</th>
                                    <th><input type="text" name="t6" class="form-item"></th>
                                    <th><input type="text" name="a6" class="form-item"></th>
                                </tr>
                                <tr>
                                    <th>ITEM 7</th>
                                    <th><input type="text" name="t7" class="form-item"></th>
                                    <th><input type="text" name="a7" class="form-item"></th>
                                </tr>
                                <tr>
                                    <th colspan="3" class="text-center">
                                        <button type="submit" class="modal-save-button">SAVE INVOICE</button>
                                    </th>
                                </tr>
                            </table>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="/js/adminNavbar.js"></script>
    <script src="/js/script.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <script src="/js/jquery.js"></script>
    <script src="/datatable/datatable.js"></script>
    <script src="/datatable/datatable.bootstrap.js"></script>
    <script>
        let navActive = document.querySelectorAll('.admin-invoice')
        navActive.forEach((i) => {
            i.classList.add('active')
        })
    </script>
</body>

</html>